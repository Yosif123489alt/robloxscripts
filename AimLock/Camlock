local P=game:GetService("Players")local R=game:GetService("RunService")local L=P.LocalPlayer local C=workspace.CurrentCamera local M=L:GetMouse()local E=_G.MOBILE_MODE or false local G=Instance.new("ScreenGui",game.CoreGui)G.Name="AIMBOT"local T=Instance.new("TextLabel",G)T.Size=UDim2.new(0,200,0,30)T.Position=UDim2.new(0.5,-100,0,0)T.Text="AIMBOT : OFF"T.TextColor3=Color3.new(1,1,1)T.Font=Enum.Font.SourceSansBold;T.TextSize=24;T.BackgroundTransparency=0.5;T.BackgroundColor3=Color3.fromRGB(80,80,80)local A=Instance.new("TextLabel",G)A.Size=UDim2.new(0,200,0,20)A.Position=UDim2.new(0.5,-100,0,30)A.Text="AIMING : ".._G.AIM_AT:upper()A.TextColor3=Color3.new(1,1,1)A.Font=Enum.Font.SourceSansBold;A.TextSize=18;A.BackgroundTransparency=0.5;A.BackgroundColor3=Color3.fromRGB(80,80,80)local function CH()for _,v in pairs(workspace:GetDescendants())do if v:IsA("Highlight")and v.Name=="ESP_HIGHLIGHT"then v:Destroy()end end end;local function CR(p)if not p.Character then return end;if p.Character:FindFirstChild("ESP_HIGHLIGHT")then return end;local h=Instance.new("Highlight")h.Name="ESP_HIGHLIGHT"h.Adornee=p.Character;h.FillTransparency=0.35;h.OutlineTransparency=0;h.DepthMode=Enum.HighlightDepthMode.AlwaysOnTop;h.Parent=p.Character;spawn(function()while h and h.Parent do for i=0.3,0.6,0.01 do h.FillTransparency=i;h.OutlineTransparency=i/2;wait(0.01)end;for i=0.6,0.3,-0.01 do h.FillTransparency=i;h.OutlineTransparency=i/2;wait(0.01)end end end)R.RenderStepped:Connect(function()if not p.Character then h:Destroy()return end;if _G.FREE_FOR_ALL or p.TeamColor~=L.TeamColor then h.FillColor=Color3.fromRGB(255,50,50)h.OutlineColor=Color3.fromRGB(255,150,150)else h.FillColor=Color3.fromRGB(50,255,50)h.OutlineColor=Color3.fromRGB(150,255,150)end end)end;local function AP()CH()for _,pl in pairs(P:GetPlayers())do if pl~=L and pl.Character then CR(pl)end end end;AP()P.PlayerAdded:Connect(function(pl)pl.CharacterAdded:Connect(function()CR(pl)end)end)local function WALLCHECK(p)if not _G.WALL_CHECK then return true end;local a=p.Character:FindFirstChild(_G.AIM_AT)if not a then return false end;local o=RaycastParams.new()o.FilterDescendantsInstances={L.Character}o.FilterType=Enum.RaycastFilterType.Blacklist local r=workspace:Raycast(C.CFrame.Position,(a.Position-C.CFrame.Position).Unit*300,o)if r and r.Instance and not a:IsDescendantOf(r.Instance)then return false end;return true end;local function NP()local cp=nil local sd=math.huge for _,v in pairs(P:GetPlayers())do if v~=L and v.Character and v.Character:FindFirstChild(_G.AIM_AT)then if _G.FREE_FOR_ALL or v.TeamColor~=L.TeamColor then local ap=v.Character[_G.AIM_AT]local d=(C.CFrame.Position-ap.Position).Magnitude if d<300 then local sp,os=C:WorldToViewportPoint(ap.Position)if os and WALLCHECK(v)then local mp=Vector2.new(M.X,M.Y)local diff=(Vector2.new(sp.X,sp.Y)-mp).Magnitude if diff<sd then sd=diff;cp=v end end end end end end return cp end;if not _G.MOBILE_MODE then M.Button2Down:Connect(function()E=true end)M.Button2Up:Connect(function()E=false end)end;M.KeyDown:Connect(function(K)K=K:lower()if K==_G.CHANGE_AIM then if _G.AIM_AT=="Head"then _G.AIM_AT="Torso"A.Text="AIMING : TORSO"else _G.AIM_AT="Head"A.Text="AIMING : HEAD"end end end)R.RenderStepped:Connect(function()if E then local t=NP()if t then local ap=t.Character:FindFirstChild(_G.AIM_AT)if ap then C.CFrame=CFrame.new(C.CFrame.Position,ap.Position)end;T.Text="AIMBOT : "..t.Name:sub(1,5)else T.Text="AIMBOT : OFF"end end end)
